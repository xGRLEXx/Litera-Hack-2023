@{
    ViewData["Title"] = "Perform AI training";
}

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <h3>Training on support case</h3>

            <form asp-controller="AI" asp-action="PerformTraining" method="get" id="trainingForm">
                <div>
                    <label for="exampleQuestion">Question:</label>
                </div>
                <div>
                    <textarea id="question" name="question" class="rounded-box" rows="4" cols="50"></textarea>
                </div>

                <div>
                    <label for="exampleAnswer">Answer:</label>
                </div>
                <div>
                    <textarea id="answer" name="answer" class="rounded-box" rows="4" cols="50"></textarea>
                </div>
                <div>
                    <input type="submit" value="Remember pair" id="submitButton">
                </div>
            </form>
            @if (!String.IsNullOrEmpty(ViewBag.Answer))
            {
                <div id="resultSection">
                    <h4>Result: </h4>
                    <p>@ViewBag.Answer</p>
                </div>
            }
        </div>
        <!--
        <div class="col-md-6">
            <h2>Sent information via file</h2>
            -->
        </div>
    </div>
</div>

<style>
    .rounded-box {
        border: 1px solid #000; /* Adjust as needed */
        border-radius: 10px; /* Adjust as needed */
        padding: 20px; /* Adjust as needed */
    }
</style>

<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<script>
    $(document).ready(function () {
        $('#trainingForm').on('submit', function () {
            $('#submitButton').attr('disabled', 'disabled');
            $('#resultSection').empty();
        });
    });
</script>